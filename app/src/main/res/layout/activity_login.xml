    <com.google.android.material.button.MaterialButton
        android:id="@+id/btSeekerLogin"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:elevation="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        android:text="Seeker Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btPosterLogin"
        app:layout_constraintTop_toBottomOf="@+id/ti_login_password" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btPosterLogin"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:elevation="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        android:text="Poster Login"
        app:layout_constraintTop_toTopOf="@id/btSeekerLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btSeekerLogin"
        app:layout_constraintStart_toEndOf="@id/btSeekerLogin"        app:layout_constraintTop_toBottomOf="@+id/btSeekerLogin" />


