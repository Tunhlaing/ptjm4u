<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".view.activity.JobCreateActivity">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/ti_jobCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/Iv_jobCategory"
        app:layout_constraintTop_toTopOf="parent"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_jobCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:maxLength="15"
            android:hint="Job category"
            />


    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        android:id="@+id/Iv_jobCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="8dp"
        android:elevation="5dp"
        android:background="@drawable/circle_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ti_jobCategory"
        app:layout_constraintBottom_toBottomOf="@id/ti_jobCategory"
        android:src="@drawable/baseline_workspaces_24"
        />
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"

        android:id="@+id/ti_jobDescription"
        app:layout_constraintStart_toEndOf="@id/Iv_jobDescription"
        app:layout_constraintTop_toBottomOf="@+id/ti_jobCategory"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_jobDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:maxLength="15"
            android:hint="Job description"
           />
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        android:id="@+id/Iv_jobDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="8dp"
        android:elevation="5dp"
        android:background="@drawable/circle_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ti_jobDescription"
        app:layout_constraintBottom_toBottomOf="@id/ti_jobDescription"
        android:src="@drawable/baseline_work_24"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_jobLocation"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ti_jobDescription"
        app:layout_constraintStart_toEndOf="@id/Iv_jobLocation"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_jobLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:maxLength="15"
            android:hint="Job location"
           />
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        android:id="@+id/Iv_jobLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="8dp"
        android:elevation="5dp"
        android:background="@drawable/circle_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ti_jobLocation"
        app:layout_constraintBottom_toBottomOf="@id/ti_jobLocation"
        android:src="@drawable/baseline_maps_home_work_24"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_jobDuration"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ti_jobLocation"
        app:layout_constraintStart_toEndOf="@id/Iv_jobDuration"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_jobDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="number"
            android:maxLength="15"
            android:hint="Job durations(hour)"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        android:id="@+id/Iv_jobDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="8dp"
        android:elevation="5dp"
        android:background="@drawable/circle_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ti_jobDuration"
        app:layout_constraintBottom_toBottomOf="@id/ti_jobDuration"
        android:src="@drawable/baseline_av_timer_24"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_ContactNumber"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ti_jobDuration"
        app:layout_constraintStart_toEndOf="@id/Iv_contactNumber"
        app:layout_constraintEnd_toEndOf="parent"
       >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_ContactNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="number"
            android:maxLength="15"
            android:hint="Contact number"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        android:id="@+id/Iv_contactNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="8dp"
        android:elevation="5dp"
        android:background="@drawable/circle_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ti_ContactNumber"
        app:layout_constraintBottom_toBottomOf="@id/ti_ContactNumber"
        android:src="@drawable/baseline_contact_phone_24"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_requireWorker"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ti_ContactNumber"
        app:layout_constraintStart_toEndOf="@id/Iv_requireWorker"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_requireWorker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="number"
            android:maxLength="15"
            android:hint="Number of require worker"
           />
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        android:id="@+id/Iv_requireWorker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="8dp"
        android:elevation="5dp"
        android:background="@drawable/circle_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ti_requireWorker"
        app:layout_constraintBottom_toBottomOf="@id/ti_requireWorker"
        android:src="@drawable/baseline_groups_3_24"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_OfferPrice"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ti_requireWorker"
        app:layout_constraintStart_toEndOf="@id/Iv_offerPrices"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_OfferPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="number"
            android:maxLength="15"
            android:hint="Offer prices(kyats)"
           />
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        android:id="@+id/Iv_offerPrices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="8dp"
        android:elevation="5dp"
        android:background="@drawable/circle_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ti_OfferPrice"
        app:layout_constraintBottom_toBottomOf="@id/ti_OfferPrice"
        android:src="@drawable/baseline_attach_money_24"
        />

    <TextView
        android:id="@+id/tv_difficultyLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ti_OfferPrice"
        android:layout_marginTop="10dp"
        android:text="Difficultly level,"
       />
    <RadioGroup
        android:id="@+id/rgDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_difficultyLevel"
        >

        <RadioButton
            android:id="@+id/any"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="any" />

        <RadioButton
            android:id="@+id/easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="easy" />

        <RadioButton
            android:id="@+id/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="normal" />

        <RadioButton
            android:id="@+id/hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="hard" />

    </RadioGroup>
    <TextView
        android:id="@+id/tv_requireLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rgDifficulty"
        android:text="Require level,"
        />
    <RadioGroup
        android:id="@+id/rgRequire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_requireLevel"
        >

        <RadioButton
            android:id="@+id/entryLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="entry level" />

        <RadioButton
            android:id="@+id/skilledWorker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="skilled worker" />

        <RadioButton
            android:id="@+id/Expert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal" />

        <RadioButton
            android:id="@+id/radioExpert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Expert" />

    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_post"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        android:text="Post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgRequire" />

</androidx.constraintlayout.widget.ConstraintLayout>